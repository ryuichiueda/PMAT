#!/bin/bash 
#
# test script of pmat
#
# usage: ./pmat.test <command>

tmp=/tmp/$$
com="$1"
datd=$(dirname $0)/DATA 

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

[ "_$com" != "_" ] ; ERROR_CHECK

###########################################
#TEST1: 単純な乗算

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
A*B 4.0 4.0 -0.40000000000000213
A*B 4.0 4.0 -0.40000000000000213
FIN

${com} "A*B" $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.1 error"

cat $tmp-in |
${com} "A*B" > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.2 error"

cat $tmp-in |
${com} "A*B" - > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.3 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
