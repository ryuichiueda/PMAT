#!/bin/bash 
#
# test script of pmat
#
# usage: ./pmat.test <command>

tmp=/tmp/$$
com="$1"
datd=$(dirname $0)/DATA 

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

[ "_$com" != "_" ] ; ERROR_CHECK

###########################################
#TEST1: 単純な乗算

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
A*B 4.0 4.0 -0.40000000000000213
A*B 4.0 4.0 -0.40000000000000213
FIN

${com} "A*B" $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.1 error"

cat $tmp-in |
${com} "A*B" > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.2 error"

cat $tmp-in |
${com} "A*B" - > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST1.3 error"

###########################################
#TEST2: simple copy of a matrix

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1 2 3.0
B 1 -2 3.1
B 1 2 -3.2
C 1.0 2.0 3.0
C 1.0 2.0 3.0
FIN

${com} "C=A" $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST2.1 error"

###########################################
#TEST3: double * matrix

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1
B 1
B 1
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1
B 1
B 1
C 2.0 4.0 6.0
C 2.0 4.0 6.0
D -3.0
D 3.0
D 3.0
FIN

${com} "C=A*2" $tmp-in | ${com} "D=B*3" > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST2.1 error"

${com} "C=2*A" $tmp-in | ${com} "D=3*B" > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST2.2 error"

###########################################
#TEST4: matrix * matrix * matrix * ...

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1
B 1
B 1
C 2 3
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1
B 1
B 1
C 2 3
D 20.0 40.0 60.0
D 20.0 40.0 60.0
FIN

${com} "D=A*B*C*A" $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST3.1 error"

###########################################
#TEST5: num * matrix * matrix * ...

cat << FIN > $tmp-in
A 1 2 3
A 1 2 3
B -1
B 1
B 1
C 2 3
FIN

cat << FIN > $tmp-out
A 1 2 3
A 1 2 3
B -1
B 1
B 1
C 2 3
D 40.0 80.0 120.0
D 40.0 80.0 120.0
FIN

${com} "D=2*A*B*C*A" $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
ERROR_CHECK "TEST3.1 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
